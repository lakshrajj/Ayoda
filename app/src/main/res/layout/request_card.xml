<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="15dp"
    android:layout_height="430dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:padding="10dp"
        android:background="@drawable/round_outline"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/requestImageView"
            android:layout_width="250dp"
            android:layout_height="280dp"/>

        <TextView
            android:id="@+id/requestLandmark"
            android:layout_below="@+id/requestImageView"
            android:layout_width="250dp"
            android:layout_height="30dp"/>

        <TextView
        android:id="@+id/requestDescription"
        android:layout_below="@+id/requestLandmark"
        android:layout_width="250dp"
        android:layout_height="30dp"/>
        <TextView
            android:layout_below="@+id/requestDescription"
            android:id="@+id/requestLocation"
            android:layout_width="250dp"
            android:layout_height="30dp"/>
    </RelativeLayout>

</RelativeLayout>